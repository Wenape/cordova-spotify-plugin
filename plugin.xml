<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="com.timflapper.spotify"
        version="0.0.1">

  <name>Spotify Cordova Plugin</name>

  <description>
    This plugin provides a JavaScript API for Spotify's iOS SDK.
  </description>

  <license>MIT</license>

  <js-module name="Spotify" src="www/spotify.js">
    <clobbers target="spotify"/>
  </js-module>

  <js-module name="lib/session" src="www/lib/session.js">
  </js-module>

  <js-module name="lib/album" src="www/lib/album.js">
  </js-module>

  <js-module name="lib/artist" src="www/lib/artist.js">
  </js-module>

  <js-module name="lib/track" src="www/lib/track.js">
  </js-module>

  <js-module name="lib/playlist" src="www/lib/playlist.js">
  </js-module>

  <js-module name="lib/audio-player" src="www/lib/audio-player.js">
  </js-module>

  <js-module name="lib/image" src="www/lib/image.js">
  </js-module>

  <platform name="ios">
    <config-file parent="/*" target="config.xml">
      <feature name="SpotifyPlugin">
        <param name="ios-package" value="SpotifyPlugin"/>
      </feature>
    </config-file>

    <config-file target="*-Info.plist" parent="CFBundleURLTypes">
    	<string>CLOBBER</string>
    </config-file>

    <config-file target="*-Info.plist" parent="CFBundleURLTypes">
    	<array>
    		<dict>
    			<key>CFBundleTypeRole</key>
    			<string>Editor</string>
    			<key>CFBundleURLName</key>
    			<string>Spotify Auth</string>
    			<key>CFBundleURLSchemes</key>
    			<array>
    				<string>spotify-ios-sdk-beta</string>
    			</array>
    		</dict>
    	</array>
    </config-file>

    <header-file src="src/ios/SpotifyJSON.h"/>
    <source-file src="src/ios/SpotifyJSON.m"/>
    <header-file src="src/ios/SpotifyAPIRequest.h"/>
    <source-file src="src/ios/SpotifyAPIRequest.m"/>
    <header-file src="src/ios/SpotifyAuthentication.h"/>
    <source-file src="src/ios/SpotifyAuthentication.m"/>
    <header-file src="src/ios/SpotifyPlugin.h"/>
    <source-file src="src/ios/SpotifyPlugin.m"/>

    <header-file src="src/ios/AppDelegate+SpotifyPlugin.h"/>
    <source-file src="src/ios/AppDelegate+SpotifyPlugin.m"/>

    <framework src="src/ios/lib/Spotify.framework" custom="true" />
    <framework src="AVFoundation.framework"/>

  </platform>
</plugin>
